{
	"name": "node-api",
	"description": "node api",
	"version": "1.0.0",
	"main": "index.js",
	"private": true,
	"keywords": [],
	"author": "john paul onte <jnpl.onte@gmail.com>",
	"license": "MIT",
	"quokka": {
		"babel": true
	},
	"scripts": {
		"build:production": "concurrently \"tsc --project ./src/tsconfig.app.json\" \"npm run generate:config\"",
		"build:development": "concurrently \"tsc --project ./tsconfig.json\" \"npm run generate:config\" \"npm run generate:docs\"",
		"generate:config": "copyfiles -u 1 ./src/config/*.json ./dist",
		"generate:docs": "apidoc -i ./src/ -o ./dist/doc/ -f .ts",
		"start": "concurrently \"tsc --watch\" \"nodemon ./dist/index.js\"",
		"start:server": "node ./dist/index.js",
		"test": "concurrently \"tsc\" \"PORT=8883 TEST_DIR='./dist/doc' ARTIFACTS_DIR='./dist/doc' COVERAGE_DIR='./dist/doc' mocha dist/**/*.spec.js --timeout 100000 --exit\"",
		"test:one": "concurrently \"tsc\" \"mocha ./dist/app/v1/core/**/*.spec.js --timeout 100000 --no-coverage --exit\"",
		"lint": "tslint -c ./tslint.json './src/**/*.ts' -e './src/**/*.spec.ts'",
		"migrate": "sequelize db:migrate --env local --config ./src/config/database-config.json --migrations-path ./dist/migrations",
		"seed:one": "sequelize db:seed --env local --config ./src/config/database-config.json --seeders-path ./dist/seeders --seed",
		"seed": "sequelize db:seed:all --env local --config ./src/config/database-config.json --seeders-path ./dist/seeders",
		"seed:revert": "sequelize db:seed:undo:all --env local --config ./src/config/database-config.json --seeders-path ./dist/seeders",
		"create:model": "sequelize model:create --migrations-path ./src/migrations --models-path ./src/models --attributes title:string --name",
		"create:seed": "sequelize seed:create --seeders-path ./src/seeders --name",
		"watch": "tsc --watch"
	},
	"dependencies": {
		"axios": "^0.24.0",
		"body-parser": "^1.19.1",
		"compression": "^1.7.4",
		"concurrently": "^7.0.0",
		"copyfiles": "^2.4.1",
		"cors": "^2.8.5",
		"crypto-js": "^4.1.1",
		"express": "^4.17.3",
		"express-csp-header": "^5.0.0",
		"express-jwt": "^6.1.0",
		"express-redis-cache": "^1.1.3",
		"fsevents": "^2.3.2",
		"helmet": "^4.6.0",
		"jnpl-helper": "^1.5.20",
		"jwt-simple": "^0.5.6",
		"mysql2": "^2.3.3",
		"nodemailer": "^6.7.2",
		"reflect-metadata": "^0.1.13",
		"sequelize": "^6.12.5",
		"sequelize-cli": "^6.3.0",
		"ts-node": "^10.4.0",
		"typescript": "^4.5.4",
		"uuid": "^8.3.2"
	},
	"devDependencies": {
		"@types/chai": "^4.3.0",
		"@types/express": "^4.17.13",
		"@types/express-serve-static-core": "^4.17.27",
		"@types/helmet": "^4.0.0",
		"@types/mocha": "^9.0.0",
		"@types/node": "^17.0.8",
		"@types/sequelize": "^4.28.11",
		"apidoc": "^0.50.3",
		"chai": "^4.3.4",
		"cross-env": "^7.0.3",
		"mocha": "^9.1.3",
		"nock": "^13.2.1",
		"nodemon": "^2.0.15",
		"supertest": "^6.1.6",
		"tslint": "^6.1.3"
	}
}
